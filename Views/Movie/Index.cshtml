    <!-- Formulario de b√∫squeda -->
    <form asp-controller="Movie" asp-action="GetByTitle" method="get" class="d-flex justify-content-center mb-5">
        <input type="text" name="title" class="form-control w-50 me-2" placeholder="Ingresa el nombre de la pel√≠cula..." required />
        <button type="submit" class="btn btn-primary">Buscar</button>
    </form>

    <!-- Mostrar resultados -->
    @if (Model != null && Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-4 g-4">
            @* @foreach (var movie in Model) *@
            @* { *@
            @*     <div class="col"> *@
            @*         <div class="card h-100 shadow-sm"> *@
            @*             <img src="@movie.Poster" class="card-img-top" alt="@movie.Title" onerror="this.src='https://via.placeholder.com/300x450?text=No+Image';"> *@
            @*             <div class="card-body"> *@
            @*                 <h5 class="card-title">@movie.Title</h5> *@
            @*                 <p class="card-text"> *@
            @*                     <strong>A√±o:</strong> @movie.Year <br /> *@
            @*                     <strong>ID IMDb:</strong> @movie.imdbID *@
            @*                 </p> *@
            @*                 <a href="#" class="btn btn-primary">Detalles</a> *@
            @*                 <a  class="btn btn-primary" asp-action="AddMovie" asp-controller="Movie" asp-all-route-data="Movie">Agregar</a> *@
            @*             </div> *@
            @*         </div> *@
            @*     </div> *@
            @* } *@
            
            @foreach (var movie in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <img src="@movie.Poster" class="card-img-top" alt="@movie.Title"
                             onerror="this.src='https://via.placeholder.com/300x450?text=No+Image';">
                        <div class="card-body">
                            <h5 class="card-title">@movie.Title</h5>
                            <p class="card-text">
                                <strong>A√±o:</strong> @movie.Year <br />
                               
                            </p>

                            <!-- -->
                            <button type="button" class="btn btn-primary"
                                    data-bs-toggle="modal" data-bs-target="#movieModal-@movie.imdbID">
                                Detalles
                            </button>


                            <!-- Formulario para guardar la pel√≠cula -->
                            <form asp-action="AddMovie" asp-controller="Movie" method="post" class="d-inline">
                                <input type="hidden" name="Title" value="@movie.Title" />
                                <input type="hidden" name="Year" value="@movie.Year" />
                                <input type="hidden" name="Poster" value="@movie.Poster" />
                                <input type="hidden" name="imdbID" value="@movie.imdbID" />
                                <button type="submit" class="btn btn-success">Agregar</button>
                            </form>
                        </div>
                    </div>
                </div>
                
                <!-- Modal de esta pel√≠cula -->
                <div class="modal fade" id="movieModal-@movie.imdbID" tabindex="-1" aria-labelledby="modalLabel-@movie.imdbID" aria-hidden="true">
                    <div class="modal-dialog modal-lg modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="modalLabel-@movie.imdbID">@movie.Title</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                            </div>
                            <div class="modal-body row">
                                <div class="col-md-4">
                                    <img src="@movie.Poster" class="img-fluid rounded" alt="@movie.Title">
                                </div>
                                <div class="col-md-8">
                                    <p><strong>A√±o:</strong> @movie.Year</p>
                                    <p><strong>ID IMDb:</strong> @movie.imdbID</p>
                                    <p><strong>G√©nero:</strong> @movie.Genre</p>
                                    <p><strong>Sinopsis:</strong> @movie.Plot</p>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    }
    else if (ViewContext.HttpContext.Request.Query.ContainsKey("title"))
    {
        <div class="alert alert-warning text-center">No se encontraron resultados para tu b√∫squeda.</div>
    }
</div>